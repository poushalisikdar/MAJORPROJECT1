<% layout("/layouts/boilerplate")%>
<body>
    <div class="row row-cols-lg-3 row-cols-md-2 mt-4 row-cols-sm-1">
        <% for(let i of listing){ %>
            <a href="/listings/<%= i._id%>" class="a-list">
                <div class="card listing-card" style="width: 20rem;">
                    <img src="<%=i.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= i.title%>
                            </b><br>
                            &#8377; <%= i.price.toLocaleString("en-IN"); %>/night
                                <i class="tax-info"> &nbsp; &nbsp; + 15% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>

    </div>

</body>