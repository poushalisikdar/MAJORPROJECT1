<% layout("/layouts/boilerplate")%>
    <style>
        .tax-info {
            display: none;
        }

        .check-box {
            display: flex;
            justify-content: end;
            align-items: end;
            margin-left: 5rem;
            
          
        }

        .tax-toggle {

            border: 1px solid black;
            width: 18rem;
            height: 2.7rem;
            margin-top: 1.5rem;
            border-radius: 1rem;
            padding: 8px;
            
           


        }

        .tax-toggle:hover {
            background-color: #F5EDED;
        }

        .tax {
            margin-right: 1rem;
            right: 222px;
        }

        .form-check-label {

            font-size: 1rem !important;
            font-weight: 500;
            font-style: italic;
            font-family: "Plus Jakarta Sans";
        }
    </style>
    <div class="check-box">
        <div class="tax-toggle">
            <div class="form-check form-switch form-check-reverse tax">
                <input class="form-check-input" type="checkbox" id="flexSwitchCheckReverse">
                <label class="form-check-label" for="flexSwitchCheckReverse">Display total before texes</label>
            </div>
        </div>
    </div>




    <div class="row row-cols-lg-3 row-cols-md-2 mt-4 row-cols-sm-1">
        <% for(let i of listing){ %>
            <a href="/listings/<%= i._id%>" class="a-list">
                <div class="card listing-card" style="width: 20rem;">
                    <img src="<%=i.image.url %>" class="card-img-top" style="height: 20rem;" alt="listing">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= i.title%>
                            </b><br>
                            &#8377; <%= i.price.toLocaleString("en-IN"); %>/night
                                <i class="tax-info"> &nbsp; &nbsp; + 15% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>

    </div>

    <script>
        let taxswitch = document.getElementById("flexSwitchCheckReverse");
        taxswitch.addEventListener("click", () => {
            let taxInfo = document.getElementsByClassName("tax-info");
            for (tax of taxInfo) {
                if (tax.style.display !== "inline") {
                    tax.style.display = "inline"
                } else {
                    tax.style.display = "none"
                }
            }
        })
    </script>