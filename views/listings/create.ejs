<% layout("/layouts/boilerplate")%>
<style>
.create{
    margin-top: 1.5rem !important;
    color: #4A249D;
}
</style>

    <body>

        <form method="POST" action="/listings" class="row g-3 needs-validation" novalidate enctype="multipart/form-data">

            <div class="row mt-3">
                <div class="col-8 offset-2">
                    <h2 class="create">Strat your business with Us</h2>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input name="listing[title]" placeholder="title" type="text" class="form-control" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" cols="20" rows="4" placeholder="Some line about listings..." type="text"
                            class="form-control" required></textarea>
                        <div class="invalid-feedback">
                            Enter short description!
                        </div>
                    </div>


                    <div class="mb-3">
                        <label for="category" class="form-label">Place Category</label>
                        <select class="form-select form-control" aria-label="Default select example" name="listing[category]" required>
                           

                            <option value="Boutique Hotel">Boutique Hotel</option>
                            <option value="Villa">Villa</option>
                            <option value="Room">Room</option>
                            <option value="Igloo">Igloo</option>
                            <option value="Pool">Pool</option>
                            <option value="Tent">Tent</option>
                            <option value="Beach">Beach</option>
                            <option value="Mountain">Mountain</option>
                        </select>
                        <div class="valid-feedback">
                           Please provide the place category.
                        </div>
                    </div>
                    

                    

                    <div class="mb-3">
                        <label for="image" class="form-label">Upload Image</label>
                        <input name="listing[image]"
                         type="file"
                         class="form-control" required>

                        <div class="valid-feedback">
                            Upload image!
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
                        <div class="invalid-feedback">
                            Please provide price.
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="India" type="text" class="form-control"
                                required>

                            <div class="invalid-feedback">
                                Please provide a valid country name.
                            </div>
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" placeholder="Kolkata,west bengal" type="text"
                                class="form-control" required>
                            <div class="invalid-feedback">
                                Please provide a valid location.
                            </div>
                        </div>
                        
                       

                    </div>
                    <div class="mb-3">
                        <button class="btn btn-primary">Submit</button>
                    </div>

        </form>
        </div>
        </div>
    </body>
    <script src="/javaScript/formvalid.js"></script>